<h1>Stylist</h1>
  <h3>Name: <%= @stylist.first_name %> <%= @stylist.last_name %></h3>

<% if @clients.any?() %>
<h3>Here are <%= @stylist.first_name %>'s clients:</h3>

<ul>
  <% @clients.each() do |client| %>
    <li><%= client.first_name() %></li>
  <% end %>
</ul>

<% else %>

  <p><%= @stylist.first_name %> dosen't have any clients assigned yet!</p>

<% end %>

<h3>Add a Client</h3>
<div class="form-group">
<form action="/stylist/<%= @stylist.id %>" method="post">

  <label for="first_name">Enter first name</label>
  <input id="first_name" name="first_name" type="text" class="form-control">
  <label for="last_name">Enter last name</label>
  <input id="last_name" name="last_name" type="text" class="form-control">
  <br>
  <button class="btn-primary btn" type="submit">Add Client</button>
</form>
</div>
